@model Candidate

<div align="center" class="display-6">
   <strong>Başvuru Ekranı</strong> 
</div>

<form method="post" asp-controller="Course" asp-action="Apply">

    <div class="text-danger" asp-validation-summary="All"></div>

    <div class="form-group my-2">
        <label asp-for="Email">E-mail</label>
        <input autocomplete="off" asp-for="Email" class="form-control">
    </div>

    <div class="form-group my-2">
        <label asp-for="FirstName">Ad</label>
        <input autocomplete="off" asp-for="FirstName" class="form-control">
    </div>

    <div class="form-group my-2">
        <label asp-for="LastName">Soyad</label>
        <input autocomplete="off" asp-for="LastName" class="form-control">
    </div>


    <div class="form-group my-2">
        <label asp-for="Age">Yaş</label>
        <select asp-for="Age" class="form-control">
            <option value="18">18</option>
            <option value="19">19</option>
            <option value="20">20</option>
            <option value="21">21</option>
            <option value="22">22</option>
            <option value="23">23</option>
        </select>
    </div>


    <div>
        <b>
            <legend>Kurslar</legend>
        </b>

        <p>

            <input id="mvc" type="radio" asp-for="SelectedCourse" checked value="Asp.net Core MVC">
            <label> Asp.net Core MVC</label>

        </p>
        <p>
            <input id="api" type="radio" asp-for="SelectedCourse" value="Asp.net Core Api">
            <label> Asp.net Core API</label>
        </p>


        <p>
            <input id="C#" type="radio" asp-for="SelectedCourse" value="C#">
            <label> C# </label>
        </p>

    </div>


    <div>
        <button class="btn btn-primary" type="submit">Başvur</button>
        <a class="btn btn-warning" asp-controller="Home" asp-action="Index">Anasayfa</a>

    </div>

</form>